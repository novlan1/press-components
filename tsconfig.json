{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "press-shared/*": [
        "./packages/shared/*",
        "./*"
      ],
      "press-hooks/*": [
        "./packages/hooks/*",
        "./*"
      ]
    }
  },
  "include": [
    "packages/*.d.ts",
    "packages/element-plus/components", // element-ui用js开发
    "docs",
    "./**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}